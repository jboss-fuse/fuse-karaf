                            <!--<specVersion>1.2</specVersion>-->
                            <!--<strictMode>false</strictMode>-->
                        <!--</configuration>-->
                    <!--</execution>-->
                <!--</executions>-->
            <!--</plugin>-->
        </plugins>
    </build>

</project>
